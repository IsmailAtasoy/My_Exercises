{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run C with GCC",
            "type": "shell",
            "command": "if not exist .\\bin mkdir .\\bin && gcc",
            "args": [
                "-g",
                "'${file}'",
                "-o",
                "'.\\bin\\${fileBasenameNoExtension}.exe'",
                "&&",
                "'.\\bin\\${fileBasenameNoExtension}.exe'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compiles and runs the active C file using gcc, outputs to ./bin folder."
        },
        {
            "label": "Build & Run C++ with G++",
            "type": "shell",
            "command": "if not exist .\\bin mkdir .\\bin && g++",
            "args": [
                "-g",
                "'${file}'",
                "-o",
                "'.\\bin\\${fileBasenameNoExtension}.exe'",
                "&&",
                "'.\\bin\\${fileBasenameNoExtension}.exe'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compiles and runs the active C++ file using g++, outputs to ./bin folder."
        },
        {
            "label": "Build & Run with MSVC (cl.exe)",
            "type": "shell",
            "command": "if not exist .\\bin mkdir .\\bin && cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe'.\\bin\\${fileBasenameNoExtension}.exe'",
                "'${file}'",
                "&&",
                "'.\\bin\\${fileBasenameNoExtension}.exe'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compiles and runs active file with MSVC, outputs to ./bin folder."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}